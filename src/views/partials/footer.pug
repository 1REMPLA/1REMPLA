style.
  footer{
    border-color: #ccc;
    background-color: WHITE;
    box-shadow: 0 -1px 2px 0 #ccc;
    padding: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }
  footer #buttonsFooter{
    padding-bottom: 10px;
    padding-top: 10px;
  }
  footer #buttonsFooter .col-sm-4 ul{
    list-style: none;
    padding-left: 0;
    margin-bottom: 0 !important;
  }
  footer  #buttonsFooter .col-sm-4{
    text-align: center;
  }
  footer #buttonsFooter .col-sm-4 ul li p{
    margin-bottom: 0 !important;
    text-align: center;
    font-size: 1em;
  }
  footer #buttonsFooter .col-sm-4 ul li p a{
    color: GREY;
  }
  footer #buttonsFooter .col-sm-4 ul li p a:hover{
    color: #f14444;
  }
  footer #copyrightFooter{
    margin-left: 0;
    margin-right: 0;
    width: 100%;
    background-color: BLACK;

  }
  footer #copyrightFooter p{
    width: 70%;
    font-size: 1em;
    color: WHITE;
    margin-bottom: 10px;
    margin-top: 10px;
  }
footer#footer
    .container#buttonsFooter
        .col-sm-4
            img(src="/images/logo.png" style="max-width: 15%; max-height: 15%;")
        .col-sm-4
          ul
            li
              p
                a(href="/#/") Accueil
            li
              p
                a(href="/#/a-propos") À propos
            li
              p
