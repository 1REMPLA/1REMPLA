    .container#copyrightFooter
        p Copyright © 2018 1Rempla. Tous droits réservés.
    script.
      //$("#footer").width($(window).width());
      $(window).click(function(){
          
          var footerHeight = 0;
          var $footer = $("#footer");
             
          positionFooter();

          function positionFooter() {
              footerHeight = $footer.height();
                            
               if ( ($(document.body).height()+footerHeight) < $(window).height()) {
                   $footer.css({
                     position: "absolute"
                   })
               } else {
                   $footer.css({
                     position: "relative",
                     margin: "25px 0 -50px"
                   })
                   if ($(window).width() > $footer.width()+1){
                     $footer.css({
                       margin: "25px -50px -50px"
                     })
                   }
               }
                 
          }
                   
      });
      $(window).ready(function(){
        var footerHeight = 0;
        var $footer = $("#footer");
           
        positionFooter();

        function positionFooter() {
            footerHeight = $footer.height();

             if ( ($(document.body).height()+footerHeight) < $(window).height()) {
                 $footer.css({
                   position: "absolute"
                 })
             } else {
                 $footer.css({
                   position: "relative",
                   margin: "25px 0 0"
                 })
                 if ($(window).width() > $footer.width()+1){
                   $footer.css({
                     margin: "25px -50px -50px"
                   })
                 }
             }
               
        }

        $(window)
               .scroll(positionFooter)
               .resize(positionFooter)
      });
